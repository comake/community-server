{
  "@context": "https://linkedsoftwaredependencies.org/bundles/npm/@solid/community-server/^3.0.0/components/context.jsonld",
  "@graph": [
    {
      "comment": "Handles the forgot password interaction",
      "@id": "urn:solid-server:auth:password:ForgotPasswordRouteHandler",
      "@type":"InteractionRouteHandler",
      "InteractionRouteHandler:_route": {
        "@id": "urn:solid-server:auth:password:ForgotPasswordRoute",
        "@type": "RelativePathInteractionRoute",
        "RelativePathInteractionRoute:_base": { "@id": "urn:solid-server:auth:password:IndexRoute" },
        "RelativePathInteractionRoute:_relativePath": "/forgotpassword/"
      },
      "InteractionRouteHandler:_source": {
        "@id": "urn:solid-server:auth:password:ForgotPasswordHandler",
        "@type": "ForgotPasswordHandler",
        "ForgotPasswordHandler:_args_accountStore": { "@id": "urn:solid-server:auth:password:AccountStore" },
        "ForgotPasswordHandler:_args_templateEngine": {
          "@type": "EjsTemplateEngine",
          "EjsTemplateEngine:_template": {
            "@type": "@json",
            "@value": {
              "templateFile": "@css:templates/identity/email-password/reset-password-email.html.ejs"
            }
          }
        },
        "ForgotPasswordHandler:_args_emailSender": { "@id": "urn:solid-server:default:EmailSender" },
        "ForgotPasswordHandler:_args_resetRoute": { "@id": "urn:solid-server:auth:password:ResetPasswordRoute" }
      }
    }
  ]
}
