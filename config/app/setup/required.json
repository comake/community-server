{
  "@context": "https://linkedsoftwaredependencies.org/bundles/npm/@solid/community-server/^3.0.0/components/context.jsonld",
  "import": [
    "files-scs:config/app/setup/handlers/redirect.json",
    "files-scs:config/app/setup/handlers/setup.json"
  ],
  "@graph": [
    {
      "comment": "Combines both the redirect and the setup.",
      "@id": "urn:solid-server:default:SetupHandler",
      "@type": "ConditionalHandler",
      "ConditionalHandler:_storageKey": "setupCompleted-2.0",
      "ConditionalHandler:_storageValue": true,
      "ConditionalHandler:_storage": { "@id": "urn:solid-server:default:SetupStorage" },
      "ConditionalHandler:_source": {
        "@type": "WaterfallHandler",
        "WaterfallHandler:_handlers": [
          { "@id": "urn:solid-server:default:SetupRedirectHandler" },
          {
            "@type": "RouterHandler",
            "RouterHandler:_args_baseUrl": { "@id": "urn:solid-server:default:variable:baseUrl" },
            "RouterHandler:_args_targetExtractor": { "@id": "urn:solid-server:default:TargetExtractor" },
            "RouterHandler:_args_allowedMethods": [ "*" ],
            "RouterHandler:_args_allowedPathNames": [ "/setup" ],
            "RouterHandler:_args_handler": { "@id": "urn:solid-server:default:SetupHttpHandler" }
          }
        ]
      }
    }
  ]
}
